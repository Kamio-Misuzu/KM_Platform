<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer capsule shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color -->
            <solid android:color="#F4B7A1"/> <!-- Light pink background -->
            <corners android:radius="30dp"/> <!-- Fully rounded corners -->
            <stroke android:width="1dp" android:color="#000000"/> <!-- Border color -->
        </shape>
    </item>

    <!-- Left semi-circle -->
    <item android:left="0dp" android:right="200dp"> <!-- Adjust right to control size of semi-circle -->
        <shape android:shape="rectangle">
            <solid android:color="#8A7B73"/> <!-- Grayish color for the left semi-circle -->
            <corners android:radius="30dp"/> <!-- Fully rounded corners -->
        </shape>
    </item>

</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- 硅基流动API设置 -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="硅基流动API设置"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="API密钥:"
                        android:layout_marginEnd="8dp"/>
                <!-- 在API密钥输入框周围添加一个相对布局，包含显示/隐藏按钮 -->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                    <EditText
                            android:id="@+id/siliconFlowApiKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/toggleApiKeyVisibility"
                            android:hint="输入硅基流动API密钥"
                            android:inputType="textPassword"/>

                    <ImageButton
                            android:id="@+id/toggleApiKeyVisibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_visibility_off" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="模型选择:"
                        android:layout_marginEnd="8dp"/>

                <Spinner
                        android:id="@+id/siliconFlowModel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <!-- 新增：默认翻译目标语言设置 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认翻译语言:"
                        android:layout_marginEnd="8dp"/>

                <Spinner
                        android:id="@+id/defaultTargetLanguage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <Button
                    android:id="@+id/saveSettingsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存设置"
                    android:layout_gravity="end"/>
        </LinearLayout>

        <!-- 清除设置 -->
        <Button
                android:id="@+id/clearSettingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除所有设置"
                android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>